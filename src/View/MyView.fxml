                    <Label fx:id="lbl_player_r" text="Player Row" GridPane.rowIndex="4" />
                    <Label fx:id="lbl_player_c" text="Player Column" GridPane.rowIndex="5" />
                    <Label fx:id="lbl_player_row" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                    <Label fx:id="lbl_player_column" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                </GridPane>
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </left>
    <bottom>
        <HBox prefHeight="8.0" prefWidth="546.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Status bar" />
            </children>
        </HBox>
    </bottom>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#newGame" text="New" />
                                <MenuItem mnemonicParsing="false" onAction="#saveGame" text="Save" />
                                <MenuItem mnemonicParsing="false" onAction="#loadGame" text="Load" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Options">
                            <items>

                        <MenuItem mnemonicParsing="false" onAction="#changeSettings" text="Change Settings" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" onAction="#exitGame" text="Exit">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#exitGame" text="Exit" />
                            </items></Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#helpGame" text="help" />
                            </items></Menu>
                        <Menu mnemonicParsing="false" text="About">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#aboutGame" text="about" />
                            </items></Menu>
                    </menus>
                </MenuBar>
            </children>
        </VBox>
    </top>
    <center>
        <Pane fx:id="MAINPANE" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
                <MazeDisplayer fx:id="mazeDisplayer" onMouseDragged="#mouseDragged" onScroll="#mouseScroll" height="800.0" imageBackground1="./src/Resources/Images/BG1.jpeg" imageBackground2="./src/Resources/Images/BG2.jpeg" imageBackground3="./src/Resources/Images/BG3.jpeg" imageBackground4="./src/Resources/Images/BG4.jpeg" imageFileNamePlayer="./src/Resources/Images/sonic.png" imageFileNameWall="./src/Resources/Images/grass.jpeg" imageGoalIcon="./src/Resources/Images/goal.png" imagePlayerDown="./src/Resources/Images/CharDown.png" imagePlayerLeft="./src/Resources/Images/Charleft.png" imagePlayerRight="./src/Resources/Images/CharRight.png" imagePlayerUp="./src/Resources/Images/CharUp.png" imageSolution="./src/Resources/Images/sol.png" imageFinish="./src/Resources/Images/finish.png" imageTree="./src/Resources/Images/tree.png" onKeyPressed="#keyPressed" width="800.0" />
            </children>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </Pane>
    </center>
</BorderPane>
